<div class="container">
  <div class="row">
    <h1 class="text-center"> <i class="fa fa-github"></i> Keep your findings, create a new gist! </h1>
    <div class="col-xs-6 col-xs-offset-3">

      <%= simple_form_for @gist do |f| %>
        <%= f.input :name, label: 'Filename including extension...'%>
        <%= hidden_field_tag :access_token, params[:access_token] %>
        <%= f.input :description, label: 'Gist description...' %>
        <%= f.input :content %>
        <%= f.input :public, as: :select, label: 'Should it be a public gist ?...' %>
        <%= f.button :submit, label: 'Create gist' %>
      <% end %>
    </div>
  </div>
</div>
